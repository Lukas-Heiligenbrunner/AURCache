{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": false,
  "prCreation": "immediate",
  "rebaseWhen": "conflicted",
  "dependencyDashboard": true,

  "packageRules": [
    {
      "matchManagers": ["cargo"],
      "rangeStrategy": "bump"
    },
    {
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Rust (Cargo) non-major updates"
    },
    {
      "matchManagers": ["pub"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Dart (pub) non-major updates"
    },
    {
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "JavaScript (npm/yarn/pnpm) non-major updates"
    }
  ]
}
